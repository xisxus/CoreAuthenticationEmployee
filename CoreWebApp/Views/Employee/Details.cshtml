@model Employee
<div class="row justify-content-center m-3" >
    @{
        var photoPath = "~/images/" + (Model.PhotoPath ?? "noimage.png");
    }
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Name</h1>
            </div>
            <div class="card-body">
                <img class="card-img-top imageThumpnail" src="@photoPath" asp-append-version="true" />
                <h4>Employee ID: @Model.Id</h4>
                <h4>Employee ID: @Model.Department</h4>
            </div>
            <div class="card-footer">
                <a asp-controller="Employee" asp-action="Index" class="btn btn-primary">Back</a>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-primary">Delete</a>
            </div>
        </div>
    </div>
</div>
