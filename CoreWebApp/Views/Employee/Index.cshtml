@model IEnumerable<Employee>
<div class="row row-cols-1 row-cols-md-3 g-4">
   
        @foreach (var item in Model)
        {
        var photoPath = "~/images/" + (item.PhotoPath ?? "noimage.png");
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p>@item.Email</p>
                    <img class="card-img-top imageThumpnail" src="@photoPath" asp-append-version="true" />

                    </div>
                    <div class="card-footer align-content-center">
                        <a asp-controller="Employee" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">View</a>
                    <a asp-controller="Employee" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
                    <a asp-controller="Employee" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
           
        }
   
</div>
